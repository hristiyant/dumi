<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.dumi.R" />

        <variable
                name="fragment"
                type="com.dumi.ui.fragment.game.GameFragment" />

        <variable
                name="vm"
                type="com.dumi.ui.fragment.SharedGameVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_game"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.fragment.game.GameFragment">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnPause"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="@dimen/margin_between_elements_default"
                android:background="@drawable/background_button_pause"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{()->vm.onPauseClick()}"
                android:padding="@dimen/margin_between_elements_default"
                app:layout_constraintEnd_toStartOf="@+id/txtTimeLeft"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_media_pause" />

        <TextView
                android:id="@+id/txtTimeLeft"
                android:layout_width="@dimen/no_dimens"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_between_elements_default"
                android:textColor="@color/white"
                android:textSize="@dimen/material_design_headline_txt_size"
                app:layout_constraintBottom_toBottomOf="@id/btnPause"
                app:layout_constraintEnd_toStartOf="@+id/txtScore"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnPause"
                app:layout_constraintTop_toTopOf="@id/btnPause" />

        <TextView
                android:id="@+id/txtScore"
                android:layout_width="@dimen/no_dimens"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_between_elements_default"
                android:gravity="end"
                android:text="@{String.valueOf(vm.totalScore)}"
                android:textColor="@color/golden_word_already_mentioned"
                android:textSize="@dimen/material_design_headline_txt_size"
                app:layout_constraintBottom_toBottomOf="@id/btnPause"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txtTimeLeft"
                app:layout_constraintTop_toTopOf="@id/btnPause" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="@dimen/no_dimens"
                android:layout_height="@dimen/no_dimens"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                app:items="@{vm.dumi}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnPause"
                app:stackFromEnd="true" />

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="@dimen/no_dimens"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:theme="@style/TextInputLayoutAppearance"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/txtWordStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DIS"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_entered_word"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/txtAlreadyMentionedWarning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/txtWordStart"
                        android:gravity="center"
                        android:text="Вече опитахте с тази дума."
                        android:textColor="@color/golden_word_already_mentioned"
                        android:textSize="@dimen/txt_size_entered_word"
                        android:visibility="gone" />

                <com.dumi.view.edittext.GameScreenEditText
                        android:id="@+id/txtInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/txtWordStart"
                        android:background="@null"
                        android:imeOptions="actionDone"
                        android:inputType="text|textNoSuggestions|textVisiblePassword"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/edit_text_horizontal_cursor"
                        android:textSize="@dimen/txt_size_entered_word"
                        android:textStyle="bold"
                        app:onEditorActionListener="@{fragment}"
                        tools:text="ABCDEFGH" />

            </RelativeLayout>

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>